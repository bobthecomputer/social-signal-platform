{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Social Signal Platform",
  "version": "0.1.0",
  "identifier": "com.socialsignal.platform",
  "build": {
    "frontendDist": "../public",
    "devUrl": "http://localhost:8787",
    "beforeDevCommand": "npm run dev"
  },
  "app": {
    "windows": [
      {
        "title": "Social Signal Platform",
        "width": 1320,
        "height": 860,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
